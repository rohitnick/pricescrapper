<div align="left">
	<center>
	<div class="right_section" align="left" style="width:500px;">
	  <b class="heading" style="text-align:left;" >What Book Are You Looking For ?</b>
		  <input class="text_me" type="text" id="product" name="product" AUTOCOMPLETE=OFF/>
		  <button class="button_me" onclick="searchBooks()" >Search </button>
		<b id="loading" style="display: none"> Loading... </b>
	</div>
	</center>
	<h2 id="suggest"></h2>
	<hr style="margin-top:-15px;"/>
		<div id="suggestTable">
			<%= raw @value %>
		</div>
</div>

<script type="text/javascript">

function searchBooks()
{
	$('#loading').show();
	val = document.getElementById('product').value;
	$('#suggest').html("Suggestions for - '"+val+"'");
	$.get('/home/search',{'title':val},function(response){
		$('#suggestTable').html(response);
		$('#loading').hide();
	});
}
function onImgErrorSmall(source)
{
source.src = "http://img1.flixcart.com/img/thumb/book.jpg";
// disable onerror to prevent endless loop
source.onerror = "";
return true;
}
</script>